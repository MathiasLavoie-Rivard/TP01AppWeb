@model UserCreate;
@{
    Layout = "_Layout";
}
<main role="main" class="pb-3 logoimage">
    <form asp-action="AjouterUtilisateur" method="post">
        <div class="form-group">
            <label asp-for="Nom"></label>
            <input asp-for="Nom" class="form-control" />
            <span asp-validation-for="Nom" class="error"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="error"></span>
        </div>
        <div class="form-group">
            <label asp-for="TypeEmp"></label>
            <select asp-for="TypeEmp" class="form-control">
                @foreach (var g in Enum.GetValues(typeof(UserCreate.TypeEmployer)))
                {
                    <option value="@g">@g.ToString()</option>
                }
            </select>
            <span asp-validation-for="TypeEmp" class="error"></span>
        </div>
        <button type="submit" class="btn btn-primary">Ajouter Utilisateur</button>
    </form>
</main>