@model UserLogin;
@{
    Layout = "_Layout";
}
<main role="main" class="pb-3 logoimage">
    <div>

        <form asp-action="Connect" method="post">
            <div class="form-group">
                <label asp-for="Login">Code d'utilisateur: </label>
                <input asp-for="Login" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="MDP">Mot de passe:</label>
                <input asp-for="MDP" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary">Connecter</button>
        </form>
        <div asp-validation-summary="All" class="error">

        </div>
    </div>
</main>