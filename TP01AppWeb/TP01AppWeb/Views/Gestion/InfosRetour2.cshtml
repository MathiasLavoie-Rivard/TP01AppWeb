@model InfosRetour;
@{
    Layout = "_Layout";
}
<main role="main" class="pb-3 logoimage">
    <form asp-action="Voiture" method="post">
        <div class="form-group">
            <label asp-for="NoPermis"></label>
            <input readonly asp-for="NoPermis" class="form-control" />
            <span asp-validation-for="NoPermis" class="error"></span>
        </div>
        <div class="form-group">
            <label asp-for="Nom"></label>
            <input readonly asp-for="Nom" class="form-control" />
            <span asp-validation-for="Nom" class="error"></span>
        </div>
        <div class="form-group">
            <label asp-for="Prenom"></label>
            <input readonly asp-for="Prenom" class="form-control" />
            <span asp-validation-for="Prenom" class="error"></span>
        </div>
        <div class="form-group">
            <label asp-for="NoTelephone"></label>
            <input readonly asp-for="NoTelephone" class="form-control" />
            <span asp-validation-for="NoTelephone" class="error"></span>
        </div>
        <button type="submit" class="btn btn-primary">Valider le retour</button>
    </form>
</main>